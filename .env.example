# AponntSuites - Configuración de Producción
# Copiar a .env y completar con valores reales

# Servidor
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=*

# Base de datos PostgreSQL (Railway managed)
# Railway provee DATABASE_URL automáticamente, pero también puedes usar variables separadas:
POSTGRES_HOST=containers-us-west-xx.railway.app
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_postgresql_railway
POSTGRES_DB=railway
DB_DIALECT=postgres

# Pool de conexiones
DB_POOL_MAX=100
DB_POOL_MIN=20
DB_POOL_ACQUIRE=120000
DB_POOL_IDLE=30000

# Configuración de sesión
SESSION_SECRET=tu_session_secret_super_seguro_aqui
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Configuración de archivos
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=50MB

# URLs de la aplicación
BASE_URL=https://aponntsuites.up.railway.app
API_URL=https://aponntsuites.up.railway.app/api/v1

# Configuración de email (opcional)
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password