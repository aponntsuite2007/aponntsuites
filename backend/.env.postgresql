# CONFIGURACIÓN DEL SERVIDOR - PostgreSQL High Concurrency
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
API_VERSION=v1

# BASE DE DATOS - PostgreSQL Optimizada para Alta Concurrencia
DB_DIALECT=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Aedr15150302
POSTGRES_DB=attendance_system
DB_LOGGING=false

# Configuración de Pool de Conexiones (Alta Concurrencia)
DB_POOL_MAX=100
DB_POOL_MIN=20
DB_POOL_ACQUIRE=120000
DB_POOL_IDLE=30000
DB_POOL_EVICT=10000

# JWT
JWT_SECRET=tu_clave_secreta_super_segura_cambiar_en_produccion_2025
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CONFIGURACIÓN REGIONAL
TIMEZONE=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS

# EMAIL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Sistema de Asistencia <noreply@empresa.com>

# WHATSAPP (Opcional)
WHATSAPP_API_URL=https://api.whatsapp.com/
WHATSAPP_TOKEN=

# UPLOADS
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,xlsx,xls

# SEGURIDAD
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
BCRYPT_ROUNDS=12

# BIOMETRÍA
FINGERPRINT_READER_TYPE=zkteco
MAX_FINGERPRINTS=5
FACE_RECOGNITION_ENABLED=true

# GPS
GPS_RADIUS_DEFAULT=50
GPS_STRICT_MODE=false

# SISTEMA
TOLERANCE_MINUTES_ENTRY=10
TOLERANCE_MINUTES_EXIT=15
MAX_OVERTIME_HOURS=3
REQUIRE_ADMIN_APPROVAL=true
SEND_NOTIFICATIONS=true
AUTO_BACKUP=true
BACKUP_HOUR=2

# REDIS (Para Caching y Sesiones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CONFIGURACIONES DE ALTA CONCURRENCIA
ENABLE_BATCH_PROCESSING=true
BATCH_PROCESSING_SIZE=1000
BATCH_PROCESSING_INTERVAL=5000
MAX_CONCURRENT_OPERATIONS=200000
ENABLE_ASYNC_PROCESSING=true

# CONFIGURACIONES DE PERFORMANCE
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=300
ENABLE_CONNECTION_POOLING=true
ENABLE_READ_REPLICAS=false

# MONITORING Y LOGGING
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1000

# CONFIGURACIÓN DE PARTICIONADO
ENABLE_TABLE_PARTITIONING=true
PARTITION_RETENTION_MONTHS=24

# CONFIGURACIONES DE SEGURIDAD
ENABLE_TWO_FACTOR=true
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900

# CONFIGURACIONES DE BACKUP
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true