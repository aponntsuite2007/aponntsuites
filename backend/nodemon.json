{
  "watch": [
    "server.js",
    "src/",
    "config/"
  ],
  "ignore": [
    "node_modules/",
    "public/",
    "logs/",
    "uploads/",
    "test-results/",
    "playwright-report/",
    "scripts/",
    "migrations/",
    "*.test.js",
    "*.spec.js"
  ],
  "ext": "js,json",
  "delay": "1000",
  "env": {
    "PORT": "9998",
    "NODE_ENV": "development"
  },
  "signal": "SIGTERM",
  "verbose": true
}
